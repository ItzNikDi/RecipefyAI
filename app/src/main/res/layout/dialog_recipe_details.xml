<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/dialog_background"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvServings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/servingsInput"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/servings"
        android:textSize="28sp"
        android:textColor="@color/textColor"/>

    <EditText
        android:id="@+id/servingsInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@id/tvServings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/tvServings"
        android:backgroundTint="@color/textColor"
        android:hint="@string/servings_hint"
        android:textSize="28sp"
        android:textColorHint="@color/textColor"
        android:textColor="@color/textColor"
        android:inputType="number"/>

    <TextView
        android:id="@+id/tvUnits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvServings"
        app:layout_constraintEnd_toStartOf="@+id/unitsSpinner"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/units"
        android:textSize="28sp"
        android:textColor="@color/textColor"/>

    <Spinner
        android:id="@+id/unitsSpinner"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@id/tvUnits"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/tvUnits"
        android:backgroundTint="@color/textColor"
        android:entries="@array/measurement_systems"/>

    <Button
        android:id="@+id/btnProceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/buttonColor"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/unitsSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/proceed"
        android:textSize="24sp"
        android:textColor="@color/textColor"/>
</androidx.constraintlayout.widget.ConstraintLayout>