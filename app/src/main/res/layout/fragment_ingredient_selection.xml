<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_gravity="center"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linear_creation_layout"
        android:padding="20dp">

        <!-- Container for RecyclerView & Empty Message -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">  <!-- Takes up remaining space -->

            <!-- RecyclerView (Fully Expands) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ingredientRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:textColor="@color/textColor"
                android:paddingHorizontal="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <!-- Empty Message (Overlaid, Hidden Initially) -->
            <TextView
                android:id="@+id/emptyMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_added_ingredients"
                android:textAppearance="@style/TextAppearance.RecipefyAI.Large"
                android:textColor="@color/textColor"
                android:gravity="center"
                android:padding="8dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Ingredient Input Field -->
        <EditText
            android:id="@+id/ingredientInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_ingredient"
            android:textColorHint="@color/textColor"
            android:textColor="@color/textColor"
            android:layout_marginTop="12dp"
            android:textAppearance="@style/TextAppearance.RecipefyAI.Normal"
            android:minHeight="48dp"
            android:maxLines="1"
            android:padding="12dp"
            android:inputType="text" />

        <!-- Add Ingredient Button -->
        <Button
            android:id="@+id/addIngredientButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_ingredient"
            android:textAppearance="@style/TextAppearance.RecipefyAI.Normal"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/buttonColor"
            android:textColor="@color/textColor" />

        <!-- Confirm Recipe Button -->
        <Button
            android:id="@+id/confirmIngredientsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/proceed"
            android:textAppearance="@style/TextAppearance.RecipefyAI.Normal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/buttonColor"
            android:textColor="@color/textColor" />

    </LinearLayout>

    <!-- Loading Overlay -->
    <LinearLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyle"
            android:indeterminateDrawable="@drawable/custom_progress" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inference_wait"
            android:textAppearance="@style/TextAppearance.RecipefyAI.Normal"
            android:textColor="@color/textColor"
            android:paddingTop="8dp"/>
    </LinearLayout>
</FrameLayout>
